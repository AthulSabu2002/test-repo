        <script>
         
            $(document).ready(function() {
        var today = new Date();
        var dd = String(today.getDate()).padStart(2, '0');
        var mm = String(today.getMonth() + 1).padStart(2, '0');
        var yyyy = today.getFullYear();
    
        today = dd + '-' + mm + '-' + yyyy;
        $("#datepicker").attr("placeholder", today);
    
        $("#datepicker").datepicker({
          dateFormat: 'dd-mm-yy'
        });
      });
