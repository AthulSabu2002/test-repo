<div class="container">
    <header>Registration</header>

    <form action="/publisher/account-details">
        <!-- first page -->
        <div class="form first">
            <div class="details personal">
                <span class="title">Personal Details</span>

                <div class="fields">
                    <div class="input-field">
                        <label for="fullName">Full Name</label>
                        <input id="fullName" name="fullName" type="text" placeholder="Enter your name" value="<%= publisher.fullName %>">
                    </div>
                    
                    <div class="input-field">
                        <label for="organizationName">Organization Name</label>
                        <input id="organizationName" name="organizationName" type="text" placeholder="Enter organization name" value="<%= publisher.organizationName %>">
                    </div>
                    
                    <div class="input-field">
                        <label for="newspaperName">Newspaper Name</label>
                        <input id="newspaperName" name="newspaperName" type="text" placeholder="Enter Newspaper Name" value="<%= publisher.newspaperName %>">
                    </div>
                    
                    <div class="input-field">
                        <label for="username">Create a username</label>
                        <input id="username" name="username" type="text" placeholder="Username" value="<%= publisher.username %>">
                    </div>
                    
                    <!-- <div class="input-field">
                        <label for="password">Create a password</label>
                        <input id="password" name="password" type="password" placeholder="Password" value="<%= publisher.password %>">
                    </div>
                    
                    <div class="input-field">
                        <label for="confirmPassword">Confirm Password</label>
                        <input id="confirmPassword" name="confirmPassword" type="password" placeholder="Confirm password" value="<%= publisher.password %>">
                    </div> -->
                    
                </div>
            </div>


            <div class="details ID">
                <span class="title">Contact Details</span>

                <div class="fields">
                    <div class="input-field">
                        <label for="mobileNumber">Mobile Number</label>
                        <input id="mobileNumber" name="mobileNumber" type="number" placeholder="Enter Mobile Number" value="<%= publisher.mobileNumber %>">
                    </div>
                    
                    <div class="input-field">
                        <label for="email">Email</label>
                        <input id="email" name="email" type="email" placeholder="Enter Your Email" value="<%= publisher.email %>">
                    </div>
                    
                    <div class="input-field">
                        <label for="state">State</label>
                        <input id="state" name="state" type="text" placeholder="Enter your state" value="<%= publisher.state %>">
                    </div>
                    
                    <div class="input-field">
                        <label for="district">District</label>
                        <input id="district" name="district" type="text" placeholder="Enter your district" value="<%= publisher.district %>">
                    </div>
                    
                    <div class="input-field">
                        <label for="buildingName">Building name</label>
                        <input id="buildingName" name="buildingName" type="text" placeholder="Enter building name" value="<%= publisher.buildingName %>">
                    </div>
                    
                    <div class="input-field">
                        <label for="pincode">Pin Code</label>
                        <input id="pincode" name="pincode" type="text" placeholder="Enter Pin Code" value="<%= publisher.pincode %>">
                    </div>
                </div>

                <button class="nextBtn">
                    <span class="btnText">Next</span>
                    <i class='bx bxs-right-arrow'></i>
                </button>
            </div>
        </div>
        <!-- first page ends -->


        <!-- second page -->
        <div class="form second">
            <div class="details address">
                <span class="title">Advertisement Specifications</span>

                <div class="fields">
                    <div class="input-field">
                        <label for="advertisementSlots">Types of advertisement slots</label>
                        <input id="advertisementSlots" name="advertisementSlots" type="text" placeholder="display ads, classified ads..." value="<%= publisher.advertisementSlots %>">
                    </div>
                    
                    <div class="input-field">
                        <label for="fileFormat">Accepted file formats</label>
                        <input id="fileFormat" name="fileFormat" type="text" placeholder="PDF, JPEG, etc." value="<%= publisher.fileFormat %>">
                    </div>
                    
                    <div class="input-field">
                        <label for="paymentmethods">Accepted payment methods</label>
                        <input id="paymentmethods" name="paymentmethods" type="text" placeholder="credit card, bank transfer, etc." value="<%= publisher.paymentmethods %>">
                    </div>
                    
                    <div class="input-field">
                        <label for="customerService">Customer support contact</label>
                        <input id="customerService" name="customerService" type="number" placeholder="Enter mobile number" value="<%= publisher.customerService %>">
                    </div>         
                    
                    <div class="input-field">
                        <label for="customerService">Newspaper Language</label>
                        <input id="language" name="language" type="text" placeholder="Enter newspaper language" value="<%= publisher.language %>">
                    </div>  
                </div>
            </div>


            <div class="details ID">
                <span class="title">Procedures for booking advertisements</span>

                <div class="fields">
                    <div class="input-field">
                        <label for="bookingDeadline">Deadline For Booking</label>
                        <input id="bookingDeadline" name="bookingDeadline" type="text" placeholder="1, 2, 3... days before" value="<%= publisher.bookingDeadline %>">
                    </div>
                
                    <div class="input-field">
                        <label for="cancellationRefundPolicy">Cancellation & Refund policy</label>
                        <input id="cancellationRefundPolicy" name="cancellationRefundPolicy" type="text" placeholder="Refund Policy" value="<%= publisher.cancellationRefundPolicy %>">
                    </div>
                
                    <div class="input-field">
                        <label for="contentGuidelines">Content Guidelines</label>
                        <input id="contentGuidelines" name="contentGuidelines" type="text" placeholder="Guidelines if any" value="<%= publisher.contentGuidelines %>">
                    </div>
                
                    <div class="input-field">
                        <label for="advertisementSubmissionGuidelines">Guidelines for submitting advertisement</label>
                        <input id="advertisementSubmissionGuidelines" name="advertisementSubmissionGuidelines" type="text" placeholder="Guidelines if any" value="<%= publisher.advertisementSubmissionGuidelines %>">
                    </div>
                
                    <div class="input-field">
                        <label for="cancellationDeadline">Deadline for cancelling or making changes to bookings</label>
                        <input id="cancellationDeadline" name="cancellationDeadline" type="text" placeholder="If any.." value="<%= publisher.cancellationDeadline %>">
                    </div>
                </div>

                <div class="buttons">
                    <button class="backBtn">
                        <i class='bx bxs-right-arrow'></i>
                        <span class="btnText">Back</span>
                    </button>

                    <button class="nextBtn"  id="submit" type="submit">
                        <span class="btnText">Submit</span>
                        <i class='bx bxs-right-arrow'></i>
                    </button>

                </div>

            </div>
        </div>
    </form>
</div>
